heat_template_version: rocky

parameters:
  NetName:
    description: NetName
    type: string
    default: network

  SubnetName:
    description: SubnetName
    type: string
    default: subnet

  PrivateSubnetCidr:
    description: PrivateSubnetCidr
    type: string
    default: 10.0.0.0/24

  RouterName:
    description: RouterName
    type: string
    default: router

  SSHkeyID:
    type: string
    default: key1

resources:
  Net:
    type: OS::Neutron::Net
    properties:
      admin_state_up: True
      name: { get_param: NetName }
      shared: false

  PrivateSubnet:
    type: OS::Neutron::Subnet
    properties:
      name: { get_param: SubnetName }
      cidr: { get_param: PrivateSubnetCidr }
      dns_nameservers:
        - 8.8.8.8
        - 8.8.4.4
      enable_dhcp: True
      network: { get_resource: Net }

  Router:
    type: OS::Neutron::Router
    properties:
      admin_state_up: True
      name: { get_param: RouterName }
      external_gateway_info: {
        enable_snat: True,
        network: ext-net
      }

  RouterPort:
    type: OS::Neutron::Port
    properties:
      name: RouterPort
      fixed_ips:
        - ip_address: 10.0.0.1
      network: { get_resource: Net }

  RouterInterface:
    type: OS::Neutron::RouterInterface
    properties:
      router: { get_resource: Router }
      port: { get_resource: RouterPort }

  Jump:
    type: OS::Nova::Server
    properties:
      name: jump
      availability_zone: compute1
      flavor: linux
      image: ubuntu_server_18.04_amd64_Openstack
      user_data_update_policy: REPLACE
      key_name: key1
      networks:
        - port: { get_resource: JumpPort }
      user_data_format: RAW
      user_data: |
        #!/bin/bash
        apt-get update -y

  JumpPort:
    type: OS::Neutron::Port
    properties:
      name: JumpPort
      fixed_ips:
        - subnet: { get_resource: PrivateSubnet }
      network: { get_resource: Net }
      security_groups: [ JumpSecurityGroup ]

  JumpFloatingIp:
    type: OS::Neutron::FloatingIP
    properties:
      floating_network: ext-net
  JumpFloatingIpAssocation:
    type: OS::Neutron::FloatingIPAssociation
    properties:
      floatingip_id: { get_resource: JumpFloatingIp }
      port_id: { get_resource: JumpPort }

  JumpSecurityGroup1:
    type: OS::Neutron::SecurityGroup
    properties:
      name: JumpSecurityGroup
      rules:
        - { remote_ip_prefix: 158.193.0.0/16, direction: ingress, protocol: icmp }
        - { remote_ip_prefix: 158.193.0.0/16, direction: ingress, protocol: tcp, port_range_min: 22, port_range_max: 22 }

  Proxy:
    type: OS::Nova::Server
    properties:
      name: jump
      availability_zone: compute1
      flavor: linux
      image: ubuntu_server_18.04_amd64_Openstack
      user_data_update_policy: REPLACE
      key_name: key1
      networks:
        - port: { get_resource: ProxyPort }
      user_data_format: RAW
      user_data: |
        #!/bin/bash
        apt-get update -y

  ProxySecurityGroup2:
    type: OS::Neutron::SecurityGroup
    properties:
      name: ProxySecurityGroup
      rules:
        - { remote_ip_prefix: 10.0.0.0/8, direction: ingress }
        - { remote_ip_prefix: 10.0.0.0/8, direction: egress }

  ProxyPort:
    type: OS::Neutron::Port
    properties:
      name: ProxyPort
      fixed_ips:
        - ip_address: 10.0.0.2
      network: { get_resource: Net }
      security_groups: [ ProxySecurityGroup ]

  Apache:
    type: OS::Nova::Server
    properties:
      name: Apache
      availability_zone: compute1
      flavor: linux
      image: ubuntu_server_18.04_amd64_Openstack
      user_data_update_policy: REPLACE
      key_name: key1
      networks:
        - port: { get_resource: ProxyPort }
      user_data_format: RAW
      user_data: |
        #!/bin/bash
        apt-get update -y

  ApacheSecurityGroup2:
    type: OS::Neutron::SecurityGroup
    properties:
      name: ApacheSecurityGroup
      rules:
        - { remote_ip_prefix: 10.0.0.0/8, direction: ingress }
        - { remote_ip_prefix: 10.0.0.0/8, direction: egress }

  ApachePort:
    type: OS::Neutron::Port
    properties:
      name: ApachePort
      fixed_ips:
        - ip_address: 10.0.0.3
      network: { get_resource: Net }
      security_groups: [ ApacheSecurityGroup ]