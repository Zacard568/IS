heat_template_version: rocky

parameters:
  net:
    type: string
    label: Network
    default: ext-net

  flavor:
    type: string
    label: Flawor
    default: nano

  image:
    type: string
    label: Image
    default: cirros

  name1:
    type: string
    label: Name1

  name2:
    type: string
    label: Name2

  ava_zone:
    type: string
    label: Availability zone
    default: compute1

resources:
  server1:
    type: OS::Nova::Server
    properties:
      name: { get_param: name1 }
      image: { get_param: image }
      flavor: { get_param: flavor }
      networks:
        - network: { get_param: net }
      availability_zone: { get_param: ava_zone }

  server2:
    type: OS::Nova::Server
    properties:
      name: { get_param: name2 }
      image: { get_param: image }
      flavor: { get_param: flavor }
      networks:
        - network: { get_param: net }
      availability_zone: { get_param: ava_zone }
